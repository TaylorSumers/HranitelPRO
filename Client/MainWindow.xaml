<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0" HorizontalAlignment="Left">
            <Image Width="70" Height="70" />
            <TextBlock Text="Название компании" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"  FontSize="20"/>
        </StackPanel>
        <Image Width="100" Height="100" HorizontalAlignment="Right" Margin="10"/>
        <Frame Name="MainFrame"/>
    </Grid>
</Window>
