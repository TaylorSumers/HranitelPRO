<Page x:Class="Security.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Security.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="675" d:DesignWidth="1200"
      Title="AuthPage">

    <Grid Background="White">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" TextAlignment="Center" FontSize="50" Margin="0,0,0,70"/>
            <TextBlock Text="Код сотрудника" FontSize="20"/>
            <TextBox Height="50" Width="400" Name="tbxCode" FontSize="25"/>
            <Button Content="Войти" FontSize="25" Height="40" Width="300" Margin="0,50,0,0" Name="btnEnter" Click="btnEnter_Click"/>
        </StackPanel>

    </Grid>
</Page>
